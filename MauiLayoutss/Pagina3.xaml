<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiLayoutss.Pagina3"
             Title="Pagina3">
    
    
    <AbsoluteLayout>
        <!-- Contenido de ejemplo que permite scroll -->
        <Label Text="Contenido scrollable..." AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All"/>

        <!-- BotÃ³n en la esquina inferior derecha -->
        <Button Text="Volver a GridLayout" 
            AbsoluteLayout.LayoutBounds="1, 1, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Clicked="OnNavigateToGridLayout"/>
    </AbsoluteLayout>
    
    
    
</ContentPage>